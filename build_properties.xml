<project name="icom.build.properties" >

	<property name="Implementation-Title" value="java.net open-icom"/>
	<property name="Implementation-Version" value="v1"/>
	<property name="Implementation-Vendor" value="java.net"/>
  <property name="project.name" value="icom"/>
  <property name="app.name" value="icom-entity-manager" />
  <property name="this.project.root" location="." /> 
  <property name="src" location="${this.project.root}/" /> 
  <property name="src.war" location="${this.project.root}/src-ear/war"/>
  <property name="src.ear" location="${this.project.root}/src-ear/ear"/>
  <property name="src.ejb-jar" location="${this.project.root}/src-ear/ejb-jar"/>
  <property name="src.entity-manager" value="${src.ejb-jar}/entity-manager" />
  <property name="src.icom-session-bean" value="${src.ejb-jar}/icom-session-bean" />
  <property name="src.icom-web-service" value="${src.ejb-jar}/icom-web-service" />
  <property name="output-root" location="./buildout" />
  <property name="outdir" location="${output-root}" /> 
  <property name="interm-root" location="./intermediates" /> 
  <property name="intdir" location="${interm-root}" /> 
  <property name="classes.dir" location="${intdir}/classes/"/>
  <property name="cache.dir" location="${intdir}/cache/"/>
  <property name="jlib.dir" location="${outdir}/jlib"/>
  <property name="war.dir" location="${outdir}/war/"/>
  <property name="ear.dir" location="${outdir}/ear/"/>
  <property name="tar.dir" location="${outdir}/tar/"/>
  <property name="gen.src.dir" location="${outdir}/src/"/>
  <property name="war.file" location="${war.dir}/example-servlet.war"/>
  <property name="ear.file" location="${ear.dir}/${app.name}.ear"/>
  <property name="jpqlparser.jar" value="${jlib.dir}/jpqlparser.jar"/>
  <property name="icom-bean.jar" value="${jlib.dir}/icom-bean.jar"/>
  <property name="icom-bean-info.jar" value="${jlib.dir}/icom-bean-info.jar"/>
  <property name="beehive-bean.jar" value="${jlib.dir}/beehive-bean.jar"/> 
  <property name="beehive-bean-info.jar" value="${jlib.dir}/beehive-bean-info.jar"/>
  <property name="icom-entity-manager-interface.jar" value="${jlib.dir}/icom-entity-manager-interface.jar"/>
  <property name="icom-entity-manager.jar" value="${jlib.dir}/icom-entity-manager.jar"/> 
  <property name="icom-weaver.jar" value="${jlib.dir}/icom-weaver.jar"/>
  <property name="icom-session-bean.jar" value="${jlib.dir}/icom-session-bean.jar"/>
  <property name="icom-web-service.jar" value="${jlib.dir}/icom-web-service.jar"/>
  <property name="icom-beehive-csi.jar" value="${jlib.dir}/icom-beehive-csi.jar"/>
  <property name="icom-beehive-bdk.jar" value="${jlib.dir}/icom-beehive-bdk.jar"/>
  <property name="icom-test.jar" value="${jlib.dir}/icom-test.jar"/>

   <!-- arguments for javac -->
  <property name="compile.compiler" value="modern"/>
  <property name="compile.deprecation" value="on"/>
  <property name="compile.nowarn" value="false"/>
  
</project>
